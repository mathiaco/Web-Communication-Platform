<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SOEN 341 Group 3</title>
    <link rel='stylesheet' href='/stylesheets/pages.css' />
    <!-- Bootstrap Core CSS -->
    <link href="../../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="../../vendor/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="../../dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="../../vendor/morrisjs/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="../../vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Plotly.js -->
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

</head>

<body>

<div id="wrapper">

    <!-- Navigation -->
    <%include Templates/navBar.ejs%>

    <!-- page-wrapper -->
    <div id="main-content">

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <%= profile.name %>
                </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- MAIN CONTENT HERE -->
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <!-- MAIN CONTENT HERE -->

                        <!-- Div containing the profile information -->
                        <!-- Needs CSS -->
                        <div>
                            <!-- Profile Info Div -->
                            <div>
                                <div>
                                    <img src = <%- profile.avatar_url %> >
                                </div>
                                <div>
                                    <div>
                                        <b>
                                            <%- profile.name %>
                                        </b>
                                        <br>
                                        <%- profile.email %>
                                        <div>
                                            <%- profile.bio %>
                                        </div>
                                        Github ID: <%= id %>
                                    </div>
                                    <a href = <%= profile.html_url%>> View Github profile </a>
                                </div>
                            </div>
                            <!-- END OF Profile Info Div -->

                            <!-- Repo & Commit data -->
                            <div>
                                <br> Repositories (Owned)<br>
                                <%  for(repo in repos){%>
                                <a href=<%= "/profile/"+profile.id+"/"+repos[repo].name%>> <%= repos[repo].name %> </a>
                                <br>
                                <%} %>
                            </div>
                            <!-- END OF Repo & Commit data -->

                            <!-- Repo statistics -->
                            <% if(typeof repoStats !== 'undefined'){%>

                            <!-- TEMP TEMP TEMP TODO: DELETE THIS WHEN GRAPHS WORK
                            <div>
                                <br><br> Statistics (WILL BE GRAPHS LATER) <br>
                                <% for(author in repoStats){ %>
                                <%= repoStats[author].author.login %>
                                <br> Total number of commits: &nbsp;
                                <%= repoStats[author].total %>
                                <br>
                                Week / additions / deletions / commits
                                <br>
                                <% for(week in repoStats[author].weeks){ %>
                                <% for(obj in repoStats[author].weeks[week]){ %>
                                <%= repoStats[author].weeks[week][obj] %>
                                <%}%>
                                <br>
                                <%}%>
                                <br>
                                <%}%>
                            </div>
                            END OF DELETE THIS
                            -->
                            <div>
                                <h2 style="text-align: center"><b>Repo Statistics</b><br> <%= repoName %></h2>
                                <div id="graphsContainer"></div>
                                <script>
                                    var repoStats = <%- JSON.stringify(repoStats) %>;
                                </script>
                                <script src="../../graphs/plotlyScript.js"></script>
                            </div>
                            <%}%>
                            <!-- end of repo statistics -->

                        </div>
                        <!-- END OF Div containing the profile information -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-8 -->
            <div class="col-lg-4">
                <!-- Place right side of page here -->
            </div>
            <!-- /.col-lg-4 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-2">
                <a href="#" title="Example tile shortcut" class="tile-box tile-box-alt btn-primary">
                    <div class="tile-header">
                        Dashboard
                    </div>
                    <div class="tile-content-wrapper">
                        <div class="chart-alt-10 easyPieChart" data-percent="21" style="width: 100px; height: 100px; line-height: 100px;"><span>21</span>%<canvas width="100" height="100"></canvas></div>
                    </div>
                </a>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

<!-- jQuery -->
<script src="../../vendor/jquery/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="../../vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="../../vendor/metisMenu/metisMenu.min.js"></script>

<!-- Morris Charts JavaScript -->
<script src="../../vendor/raphael/raphael.min.js"></script>
<script src="../../vendor/morrisjs/morris.min.js"></script>
<script src="../../data/morris-data.js"></script>

<!-- Custom Theme JavaScript -->
<script src="/js/firebaseInitialization.js"></script>
<script src="../../dist/js/sb-admin-2.js"></script>

</body>

</html>
